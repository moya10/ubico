<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4ae"
    android:paddingLeft="16dp"
    android:paddingTop="50dp"
    android:paddingRight="16dp"
    android:paddingBottom="50dp"
    tools:context=".Permissions.PermissionRational">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back"
        >


        <TextView
            android:id="@+id/mainMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aldrich"
            android:layout_marginStart="20dp"
            android:includeFontPadding="true"
            android:text="@string/title_activity_permission_rational"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainMessageTextView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/aldrich"
            android:includeFontPadding="true"
            android:text="@string/details_message_activity_permission_rational"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/deny_permission_request"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/detailsTextView"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icons8_unavailable_64"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/aldrich"
            android:includeFontPadding="false"
            android:onClick="onClickDenyPermissionRequest"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/approve_permission_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsTextView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icons8_tick_box_64"
            android:fontFamily="@font/aldrich"
            android:includeFontPadding="false"
            android:onClick="onClickApprovePermissionRequest"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/todo" />

    </RelativeLayout>
</ScrollView>